<% if !@connection.nil? %>
    var opening_tags =  "<li id='consultant_<%= @connection.mentor.employee_id%>'><div class='mentor'>";
    var render_consultant = "<%= j render "consultants/connection", connection: @connection, name: @connection.mentor.full_name, employee_id: @connection.mentor.employee_id%>";
    var delete_button = "<%=j render 'consultants/delete_sponsorship', connection: @connection%>";
    var closing_tags = "</div></li>";

    var to_append = opening_tags+render_consultant+delete_button+closing_tags;
    $("#panel-mentors .matches").prepend(to_append);
    $(".sponsor_search").val("")
<% end %>

<% if flash[:alert]%>
    $(".sponsor-search li:last").append("<%= j render "consultants/alert" %>")
<% end %>