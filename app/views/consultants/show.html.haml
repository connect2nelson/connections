.consultant-show
  .row
    .small-4.columns
      = image_tag 'profile.png'
    .small-8.columns
      %h2 #{@consultant.full_name}
      %dl
        %dt Role
        %dd= @consultant.primary_role
        %dt Home Office
        %dd= @consultant.home_office
        %dt Working Office
        %dd= @consultant.working_office
  .row
    .small-8.columns
      %h3 Matches
      %ul.matches
        - @connections.take(3).each do |connection|
          %li
            .mentor
              = connection.mentor.full_name
              %ul
                - connection.teachable_skills.each do |teachable_skill|
                  %li.label= teachable_skill


    .small-4.columns
      %h3
        = @consultant.full_name.split.first
        wants to learn
      %ul
        - @consultant.skills_to_learn.each do |skill|
          %li= skill
